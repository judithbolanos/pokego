---
import { siteConfig } from "@utils/config";
const All_Links = [
    { href:`${siteConfig.basepath}`,text: "Home"},
    { href:`${siteConfig.basepath}favorites`, text: "Favoritos" },
    { href:`${siteConfig.basepath}pokemons/1`,  text: "Listado de pokemons" },
];
import {Icon} from "astro-icon/components"
---


<footer class="bg-gray-950 rounded-lg  m-4 mx-0">
    <div class="w-full max-w-screen-xl mx-auto p-4 md:py-8">
        <div class="sm:flex sm:items-center sm:justify-between">
            <a href=`${siteConfig.basepath}` class="flex items-center mb-4 sm:mb-0 space-x-3 rtl:space-x-reverse">
                <Icon name={`pokeball`} size={38} />
                <span class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white">{siteConfig.title}</span>
            </a>
            <ul class="flex flex-wrap items-center mb-6 text-gray-500 sm:mb-0 dark:text-gray-400">
                {All_Links.map(({href, text}) => (
                    <li>
                            <a href={href} class="flex gap-3 text-gray-200 mx-1.5 sm:mx-6 hover:underline me-4 md:me-6">
                                {text}
                            </a>
                    </li>
                ))}
            </ul>
        </div>
        <hr class="my-6 border-gray-200 sm:mx-auto dark:border-gray-700 lg:my-8" />
        <span class="block text-sm text-gray-500 sm:text-center dark:text-gray-400">Â© 2025 <a href="#" class="hover:underline">{siteConfig.title}</a>. All Rights Reserved.</span>
        <span class="block text-sm text-gray-500 sm:text-center dark:text-gray-400">Developed by <a href=`${siteConfig.linkcreator}` target="_blank"  class="hover:underline">{siteConfig.creator}</a>.</span>
    </div>
</footer>


